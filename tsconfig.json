{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib/typescript"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
